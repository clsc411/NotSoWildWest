<h2>User Profile: <span style="color: {{profileColor}}">{{profileDisplayName}}</span> {{profileAvatar}}</h2>

{{#if profileBio}}
  <p><strong>Bio:</strong> {{profileBio}}</p>
{{/if}}

<h3>Recent Comments</h3>
<ul>
  {{#each comments}}
    <li>
      ({{createdAt}}): {{text}}
    </li>
  {{else}}
    <li>No comments yet.</li>
  {{/each}}
</ul>

{{#if showPagination}}
  <div style="margin-top: 20px; text-align: center;">
    {{#if hasPrev}}
      <a href="/user/{{profileUsername}}?page={{prevPage}}">&laquo; Previous</a>
    {{/if}}
    
    <span style="margin: 0 10px;">Page {{currentPage}} of {{totalPages}} ({{totalComments}} comments)</span>
    
    {{#if hasNext}}
      <a href="/user/{{profileUsername}}?page={{nextPage}}">Next &raquo;</a>
    {{/if}}
  </div>
{{/if}}

<p><a href="/comments">Back to all comments</a></p>
